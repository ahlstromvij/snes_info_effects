	journal = {Political Psychology},
	keywords = {partisanship, party identification, experiments, experimental analysis, Russia, Poland, Hungary, Great Britain, Bulgaria, Moldova},
	number = {S1},
	pages = {137-157},
	title = {Unreflective Partisans? Policy Information and Evaluation in the Development of Partisanship},
	url = {https://onlinelibrary.wiley.com/doi/abs/10.1111/pops.12480},
